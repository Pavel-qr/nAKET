#:kivy 2.1.0

<AbstractListItem>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: .1, .1, .1, 1
        Line:
            width: 2.4
            rectangle: self.x, self.y, self.width, self.height

    orientation: 'vertical'
    spacing: 10
    size_hint_y: None


<WTasks>:
    canvas.before:
        Color:
            rgba: .5, .7, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    ScrollView:
        id: tasks_scroll
        do_scroll_x: False
        do_scroll_y: True
        effect_cls: 'ScrollEffect'

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint_y: None
            height: self.minimum_height
            id: tasks

<WTask>:
    size_hint_y: None

    Label:
        id: teacher
        text: 'Teacher'
    Label:
        id: type
        text: 'Task type'
    Label:
        id: name
        text: 'Task name'


<WSchedule>:
    canvas.before:
        Color:
            rgba: .5, .7, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    ScrollView:
        id: schedule_scroll
        do_scroll_x: False
        do_scroll_y: True
        effect_cls: 'ScrollEffect'

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint_y: None
            height: self.minimum_height
            id: schedule

<WLesson>:
    Label:
        id: time
        text: 'time'
    Label:
        id: name
        text: 'name'

<Naket>:
    swipe_on_scroll: False
    width_mult: 0

    WTasks:
        id: tasks
    WSchedule:
        id: schedule
    MDSwiperItem:
        Button:
            text: 'update'
            on_release: root.ids.tasks.add_tasks(None), root.ids.schedule.add_schedule(None)
